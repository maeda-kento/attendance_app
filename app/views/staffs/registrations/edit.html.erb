<div class= "container" >
  <div class= "row" >
  <%= form_with model: current_staff, url: staffs_registrations_path, method: :patch, deta: { remote: false } do |f| %>
    <!--フォーム内容 -->
    <%= f.label :last_name %><span>:</span>
    <%= f.text_field :last_name, id: "staff_last_name", class: "form-control" %>
    <%= f.label :first_name %><span>:</span>
    <%= f.text_field :first_name, id: "staff_first_name", class: "form-control" %>
    <%= f.label :birthed_on %><span>:</span>
    <%= f.date_field :birthed_on, id: "staff_birthed_on", class: "form-control" %>
    <%= f.label :email %>
    <%= f.email_field :email, id: "staff_birthed_on", class: "form-control" %>
    <%= f.label :hourly_pay %><span>:</span>
    <%= f.number_field :hourly_pay, id: "staff_hourly_pay", class: "form-control" %>
    <div>
    <%= f.label :gender %><span>:</span>
    <%= f.collection_radio_buttons :gender, Staff.genders_i18n, :first, :last %>
    </div>
    <%= f.label :department %><span>:</span>
    <%= f.collection_select :department, Department.all, :id, :name, {}, { class: "form-control" } %>
    <%= f.submit "変更を送信", class: "btn btn-success" %>
  <% end %>
  </div>
</div>

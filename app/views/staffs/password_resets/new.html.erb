<div class = "col-md-10 offset-md-1 col-lg-8 offset-lg-2 pt-5">
  <h1 class= "text-center">メールアドレス認証</h1>
  <%= form_with model: @staffs, url: staffs_password_resets_path, local: true, method: :post do |f|%>
    <div class = "form-group">
      <%= f.label :email, "メールアドレス"%>
      <%= f.email_field :email, class: "form-control"%>
    </div>
    <div class = "text-center">
    <%= f.submit "認証メール送信", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
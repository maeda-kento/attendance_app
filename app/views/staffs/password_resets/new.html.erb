<div class = "container">
  <div class = "row">
    <div class = "col-md-10 offset-md-1 col-lg-8 offset-lg-2">
    <h1>メールアドレス認証</h1>
    <%= form_with model: @staffs, url: staffs_password_resets_path, local: true, method: :post do |f|%>
      <div class = "form-group">
        <%= f.label :email, "メールアドレス"%>
        <%= f.email_field :email, class: "form-control"%>
      </div>
      <%= f.submit "認証メール送信", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
